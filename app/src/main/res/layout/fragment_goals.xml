<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/goals_scroll"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/goal_button_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <Button
            android:id="@+id/goalTitle1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Goal 1" />

        <Button
            android:id="@+id/goalTitle2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Goal 2" />

        <Button
            android:id="@+id/goalTitle3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Goal 3" />

        <Button
            android:id="@+id/goalTitle4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Goal 4" />

        <Button
            android:id="@+id/goalTitle5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Goal 5" />

    </LinearLayout>
</ScrollView>
